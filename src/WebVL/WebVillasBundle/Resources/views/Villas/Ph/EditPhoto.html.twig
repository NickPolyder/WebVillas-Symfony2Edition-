{% extends 'WebVLWebVillasBundle::layout.html.twig' %}
{% import "WebVLWebVillasBundle::villastemplate.html.twig" as vill %}
 {% block Head %}    
            <title>WebVillas - Edit Photo</title>
            {%if  theme matches '{^[0-9]$}'  %}
{% if  theme == 0 %}
   <link rel="stylesheet" href="{{asset('bundles/webvlwebvillas/css/villas.css')}}" /> 
   {% else %}
       {%if theme == 1%}
           <link rel="stylesheet" href="{{asset('bundles/webvlwebvillas/css/villas2.css')}}" /> 
       {% endif %}
   {% endif%}
   
{% else %} 
  <link rel="stylesheet" href="{{asset('bundles/webvlwebvillas/css/villas.css')}}" /> 
{% endif %}
           <link rel="stylesheet" href="{{asset('bundles/webvlwebvillas/css/Forms.css')}}" /> 

            {%endblock %} 
{% block MainCont %} 
    <div id="MainContent">
         <br/> <br/>
        <h1>Edit Photo</h1>
           <br/> <br/>
           {% if id|default(-1) == -1%}
           {{vill.photos(Photo,1) }}
           {% else %}
               {% if img|default(null) != null%}
    <form class="EditForms"  name="EditForm" method="post" action="{{path('_EditCheckPhoto',{'id':img.id})}}" onsubmit="return PhotoCheck()">
         <table class="TableForms">
               
                 <tr><td>Image =></td><td>
                                <a href='{{asset('bundles/webvlwebvillas/images/UserImages/'~img.filename)}}' target='_blank'>
      <img src="{{asset('bundles/webvlwebvillas/images/UserImages/'~img.filename)}}" alt='{{img.description}}' width="40%" height="auto"/>
                                </a>
                    </td></tr>
                <tr><td>Description =></td> <td> 
                        <textarea id="ImageDescription" placeholder="Write a description for your image" name="ImageDescription" rows="5" cols="25" style="color:black;">{{img.description}}</textarea><span id="DescErr"></span>
                    </td></tr>
                <tr><td class="buttons"></td><td class="buttons"><input id="Edit" name="Edit" type="submit" value="Edit!" /></td></tr>
                        <tr><td class="buttons"></td><td class="buttons"><input id="reset" name="reset" type="Reset" value="Reset" /></td></tr>
         </table>
    </form>
                {% else %}
                Something Occured please Reload!
                {% endif %}
               {% endif %}
    </div>
 {% endblock %}