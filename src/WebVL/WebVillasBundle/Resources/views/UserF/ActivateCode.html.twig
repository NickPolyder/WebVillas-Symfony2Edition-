{% extends 'WebVLWebVillasBundle::layout.html.twig' %}
 {% block Head %}    
            <title>WebVillas - Activation Code </title>
       
 <link rel="stylesheet" href="{{asset('bundles/webvlwebvillas/css/Forms.css')}}" /> 
            {%endblock %} 
{% block MainCont %} 
    <div id="MainContent">
        <br/>
        <h1>Activation Form</h1>
        {% if Error|default('') != '' %}
            <div class="errors"> <ul>  <li>{{ Error}}</li> </ul></div>
        {% endif %}
       {{ form_start(form,{'action': path('_Reg_ActiveCode_Check'),'method':'POST','attr':{'onsubmit':'return ActivationCo()'}}) }}
       <div class="errors">{{ form_errors(form) }}</div>
       
       
         <br/>
 <table class="TableForms">
     
<tr>
    <td>{{ form_label(form.Username) }}</td><td>{{ form_widget(form.Username,{'id':'UserName','attr':{'name':'_username','placeholder':'Enter Username','size':'30','value':usernm|default('')}}) }}<span id="Nameerr" class="error"></span></td>
    
</tr> 
<tr>
    <td>{{ form_label(form.ActivationCode) }}</td><td>{{ form_widget(form.ActivationCode,{'id':'ActivationCode','attr':{'placeholder':'Enter Activation Code','size':'30','value':Activation|default('')}}) }}<span class="error" id="Activeerr"></span></td>
</tr>
<tr><td>Security Code:</td><td>
 </td><br /></tr>
		 <tr><td></td><td class="required">{{form_widget(form.captcha,{'id':"security_code",'attr':{'placeholder':'ReCaptcha Code','size':'30'}})}}<span class="error" id="Secerr"></span></td><br />
                    </tr>

<tr><td class="buttons"></td><td class="buttons">{{ form_widget(form.Activate) }}  {{ form_widget(form.Reset) }}</td></tr>
</table> 

{{ form_end(form) }} 
  <br/>
    <br/>
    </div>
    {% endblock %}
